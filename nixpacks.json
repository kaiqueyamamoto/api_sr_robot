{
  "phases": {
    "setup": {
      "nixPkgs": [
        "go_1_24"
      ]
    },
    "install": {
      "cmds": [
        "go mod download",
        "go install github.com/swaggo/swag/cmd/swag@latest"
      ]
    },
    "build": {
      "cmds": [
        "swag init -g main.go --output ./docs || true",
        "go build -o chatserver main.go"
      ]
    }
  },
  "start": {
    "cmd": "./chatserver"
  }
}